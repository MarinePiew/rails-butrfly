<% if @review.errors.any? %>
  $('#new_review').html("<%= j render 'reviews/form', au_pair: @aupair, review: @review %>");
<% else %>
  var new_review = $("<%= j render 'reviews/show', review: @review %>").hide();
  $('#reviews').append(new_review);
  new_review.slideDown();
  $('#new_review').html("<%= j render 'reviews/form', au_pair: @aupair, review: Review.new %>");
<% end %>
